<odoo>
    <template id="template_garbage_collections_index">
        <t t-call="website.layout">
            <div class="container">
                <h1>Coletas de Lixo</h1>
                <t t-foreach="garbage_collections" t-as="collection">
                    <div class="collection-item">
                        <h2><t t-esc="collection.name"/></h2>
                        <p>Data: <span t-esc="collection.date"/></p>
                        <p>Local: <span t-esc="collection.location"/></p>
                        <p>Tipo: <span t-esc="collection.type"/></p>
                    </div>
                </t>
            </div>
        </t>
    </template>
</odoo>
