<odoo>

    <record id="res_config_settings_map_localization_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.map_localization</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block"
                     data-string="Map Localization" string="Map Localization"
                     data-key="map_localization">
                    <h2>Map Localization</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="o_setting_right_pane" id="map_localization_signer_settings">
                            <div class="text-muted">
                                <label for="google_maps_api_key"/>
                            </div>
                        </div>
                        <div class="o_setting_left_pane">
                            <field name="google_maps_api_key" password="True"/>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>